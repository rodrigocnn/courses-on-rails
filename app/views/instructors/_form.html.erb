<%= form_with(model: instructor) do |form| %>
  <% if instructor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(instructor.errors.count, "error") %> prohibited this instructor 
      from being saved:</h2>

      <ul>
        <% instructor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="row">
    <!-- Campos lado a lado -->
    <div class="col-md-6 mb-3">
      <%= form.label :name, class: 'form-label text-light' %>
      <%= form.text_field :name, class: 'input-custom' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :email, class: 'form-label text-light' %>
      <%= form.text_field :email, class: 'input-custom' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :date_of_birth, class: 'form-label text-light' %>
      <%= form.date_select :date_of_birth, class: 'input-custom' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :cpf, class: 'form-label text-light' %>
      <%= form.text_field :cpf, class: 'input-custom' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :phone, class: 'form-label text-light' %>
      <%= form.text_field :phone, class: 'input-custom' %>
    </div>

    <div class="col-md-6 mb-3">
      <%= form.label :subject, class: 'form-label text-light' %>
      <%= form.text_field :subject, class: 'input-custom' %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 mb-3">
      <%= form.label :description, class: 'form-label text-light' %>
      <%= form.text_area :description, class: 'input-custom' %>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
       <%= form.submit 'Salvar', class: 'btn btn-primary' %>
    </div>
  </div>
</div>

<% end %>
