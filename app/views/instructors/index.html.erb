<div class="title-page">
  <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
  <li class="breadcrumb-item active" aria-current="page">
    <%= link_to 'Instrutores', courses_path %>
  </li>
  </ol>
  </nav>
</div>

<div class="container-button-create">
<%= link_to 'Novo', new_instructor_path, class: "btn btn-primary" %>
</div>

<div class="content-page">
  <table class="table table-dark table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Date of birth</th>
      <th>Cpf</th>
      <th>Phone</th>
      <th>Subject</th>
      <th>String</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.name %></td>
        <td><%= instructor.email %></td>
        <td><%= instructor.date_of_birth %></td>
        <td><%= instructor.cpf %></td>
        <td><%= instructor.phone %></td>
        <td><%= instructor.subject %></td>
        <td><%= instructor.string %></td>
        <td><%= link_to 'Show', instructor %></td>
        <td><%= link_to 'Editar', edit_instructor_path(instructor) %></td>
        <td><%= link_to 'Excluir', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


