
<div class="title-page">
  <nav aria-label="breadcrumb">
  <ol class="breadcrumb">
  <li class="breadcrumb-item active" aria-current="page">
    <%= link_to 'Home', courses_path %>
    <li class="breadcrumb-item " aria-current="page">Cursos</li>
  </li>
  </ol>
  </nav>
</div>

<div class="container-button-create">
<%= link_to 'Novo', new_course_path, class: "btn btn-primary" %>
</div>


<div class="content-page">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.title %></td>
          <td><%= course.description %></td>
          <td><%= link_to 'Show', course %></td>
          <td><%= link_to 'Editar', edit_course_path(course) %></td>
          <td><%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<div class="content-page">





